<header data-theme="dark" class=@($"{(Shadow ? "shadow" : "")} {(UnifyNav ? "unify-nav" : "")}")>
    <SWBackgroundStack>
        <BackgroundStackBackground>
            @HeaderBackground
        </BackgroundStackBackground>
        <BackgroundStackContent>
            @HeaderContent
        </BackgroundStackContent>
    </SWBackgroundStack>
</header>

@code {
    [Parameter] public RenderFragment HeaderBackground { get; set; }
    [Parameter] public RenderFragment HeaderContent { get; set; }
    [Parameter] public bool Shadow { get; set; } = true;
    [Parameter] public bool UnifyNav { get; set; } = true;
}
