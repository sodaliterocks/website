<footer>
    <div class="container">
        @ChildContent
        <ul>
            <li>
                <I18n
                    Key="FooterWidget.Attribution"
                    Replacements=@(new string[] { 
                        CopyrightYear,
                        "<a href=\"https://github.com/sodaliterocks\">Sodalite</a>"
                    }) />
            </li>
        </ul>
    </div>
</footer>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    
    private string CopyrightYear { get; set; }
    
    protected override void OnInitialized()
    {
        CopyrightYear = DateTime.Now.Year.ToString();
        base.OnInitialized();
    }
}
